<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_child2_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/left_graph_line"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/bg_graph_vertical" />

        <ImageView
            android:id="@+id/bottom_graph_line"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_graph_line"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/left_graph_line"
            android:background="@drawable/bg_graph_horizontal"
            android:tint="#ff00" />

        <ImageView
            android:id="@+id/graph_curve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_graph_line"
            android:layout_alignRight="@+id/bottom_graph_line"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/left_graph_line"
            android:background="@drawable/icon_graph"
            android:tint="#ff00ff" />

        <View
            android:id="@+id/fragment_child_over_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/graph_curve"
            android:layout_alignTop="@+id/graph_curve"
            android:layout_alignRight="@+id/graph_curve"
            android:layout_alignBottom="@+id/graph_curve"
            android:background="@android:color/white"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_child2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imageView_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_home" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="#808080" />

    </LinearLayout>

</LinearLayout>
