<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:urbanft="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/screen_1_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone">

        <View
            android:id="@+id/hr_1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_divider_light_gray" />

        <LinearLayout
            android:id="@+id/row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hr_1"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic2_friend_female" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="70dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="3.5dp"
                    android:background="@color/training_light_grey" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/training_light_grey" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/hr_2"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/row_1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_divider_light_gray" />

        <LinearLayout
            android:id="@+id/row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hr_2"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic2_friend_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="70dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="3.5dp"
                    android:background="@color/training_light_grey" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/training_light_grey" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/hr_3"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/row_2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_divider_light_gray" />

        <LinearLayout
            android:id="@+id/row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hr_3"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic2_friend_female" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="70dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="3.5dp"
                    android:background="@color/training_light_grey" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/training_light_grey" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/hr_4"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/row_3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_divider_light_gray" />

        <LinearLayout
            android:id="@+id/row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hr_4"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/row_image_toBeEnlarged"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic2_friend_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="70dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="3.5dp"
                    android:background="@color/training_light_grey" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/training_light_grey" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/hr_5"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/row_4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_divider_light_gray" />

        <LinearLayout
            android:id="@+id/row_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hr_5"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic2_friend_female" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="70dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="3.5dp"
                    android:background="@color/training_light_grey" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/training_light_grey" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/overlay_translate_view"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/hr_1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/grey_spinner_selected_bg"
            android:visibility="visible" />

        <View
            android:id="@+id/overlay_ripple_view"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/hr_4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#60D9D9D9"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/screen_2_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/enlarge_male_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic2_enlarge_friend_male" />

        <View
            android:id="@+id/invisible_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/horizontal_rule_1"
            android:layout_width="85dp"
            android:layout_height="6dp"
            android:layout_below="@+id/invisible_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/training_light_grey"
            android:visibility="invisible" />

        <View
            android:id="@+id/horizontal_rule_2"
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:layout_below="@+id/horizontal_rule_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/training_light_grey"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_rule_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:includeFontPadding="false"
            android:text="$00.00"
            android:textColor="#cc525151"
            android:textSize="22dp"
            android:visibility="invisible" />

        <View
            android:id="@+id/oval_bg"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_below="@+id/horizontal_rule_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/training_circle_solid_filled"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/oval_tick"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/oval_bg"
            android:layout_alignTop="@+id/oval_bg"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_white_check"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/request_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_txt"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:visibility="invisible">

            <TextView
                android:id="@+id/request_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:text="Request"
                android:textColor="#ccffffff"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pay_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#bfbfbf"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:text="Pay"
                    android:textColor="#ccffffff"
                    android:textSize="13dp" />

                <View
                    android:id="@+id/pay_ripple_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/pay_txt"
                    android:layout_alignTop="@+id/pay_txt"
                    android:background="#6096d1bc"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
